rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function checkAdmin() {
    	return get(/databases/$(database)/documents/user/$(request.auth.uid)).data.role == 'admin';
    }

    match /user/{docId} {
      allow read, write: if request.auth != null;
    }
    match /write-post/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
